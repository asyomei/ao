---
interface Props {
  title: string
  open?: boolean
}

const { title, open = true } = Astro.props
---

<details class="section" {open}>
  <summary>
    <h2>{title}</h2>
  </summary>

  <slot />
</details>

<style lang="scss" is:global>
  @use 'src/colors';

  .section {
    > summary {
      width: max-content;

      border-bottom: dashed 1px colors.$text-secondary;
      padding-bottom: 12px;

      cursor: pointer;
      user-select: none;
    }

    &[open] > summary {
      border-bottom: solid 1px colors.$text-primary;
    }

    > * + * {
      padding-top: 16px;
    }
  }
</style>
